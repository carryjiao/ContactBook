<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/popupwindow_shape">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="是否要收藏该联系人?"
        android:textSize="20sp"
        android:textColor="@color/colorCharBGGray"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_add_collect_popupwindow_cancel"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:text="取消"
            android:textSize="20sp"
            android:textColor="@color/colorCharBGGray"
            android:background="@drawable/popupwindow_btn_shape"/>

        <Button
            android:id="@+id/btn_add_collect_popupwindow_confirm"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:text="确认"
            android:textSize="20sp"
            android:textColor="@color/colorCharBGGray"
            android:background="@drawable/popupwindow_btn_shape"/>
    </LinearLayout>

</LinearLayout>
