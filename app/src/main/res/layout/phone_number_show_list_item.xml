<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:layout_marginRight="@dimen/contact_personal_show_margin_left">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_contact_personal_show_number_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机"
            android:textSize="20sp"
            android:typeface="monospace"
            android:textColor="@color/colorCharBlue"/>

        <TextView
            android:id="@+id/tv_contact_personal_show_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="13251356557"
            android:textSize="20sp"
            android:typeface="monospace"
            android:textColor="@color/colorCharBlue"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="9dp"
        android:rotation="-90">

        <ImageView
            android:id="@+id/im_contact_personal_show_call_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_call"
            android:tint="@color/colorCharBlue"/>

    </FrameLayout>

</RelativeLayout>
