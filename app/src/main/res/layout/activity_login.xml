<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_grey_bg" >

    <RelativeLayout
        android:id="@+id/rl_login_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:gravity="center_vertical"
        android:background="@color/colorTitleBlue"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:id="@+id/ll_login_back"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;"
                android:textSize="30sp"
                android:textColor="@color/colorTitleBGGray" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textSize="20sp"
            android:textColor="@color/colorTitleBGGray"/>

    </RelativeLayout>

    <View
        android:id="@+id/split_line1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_login_title_bar"
        android:layout_marginTop="18dp"
        android:background="@color/grey_line" />

    <RelativeLayout
        android:id="@+id/rl_phonenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/split_line1"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:src="@drawable/lock" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:text=""
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/split_line2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_phonenum"
        android:background="@color/grey_line" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/split_line2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/backup_btn_shape"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:paddingTop="15dp"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_forget_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/split_line2"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="忘记密码?"
        android:textColor="@drawable/grey_red_text_selector"
        android:textSize="12sp" />

</RelativeLayout>