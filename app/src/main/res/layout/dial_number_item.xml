<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <Button
        android:id="@+id/btn_dial_number"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:stateListAnimator="@null"
        android:background="@drawable/dial_number_shape" />


    <LinearLayout
        android:id="@+id/ll_dial"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="23dp">

        <TextView
            android:id="@+id/tv_dial_number"
            android:text="2"
            android:textSize="30sp"
            android:typeface="monospace"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_dial_number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_dial_char"
            android:text="ABC"
            android:textSize="10sp"
            android:textColor="@color/colorCharBGGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_dial_number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

</FrameLayout>
