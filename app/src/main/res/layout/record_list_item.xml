<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/im_record_contact_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/contact_personal_show_margin_left"
        android:layout_centerVertical="true"
        android:src="@android:drawable/sym_call_outgoing"/>

    <LinearLayout
        android:id="@+id/ll_record_name_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/im_record_contact_type"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv_record_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/record_item_margin_top"
            android:gravity="center_vertical"
            android:text="焦消"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_record_type"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:gravity="center_vertical"
            android:layout_below="@id/tv_record_display_name"
            android:layout_marginTop="@dimen/record_item_margin_top"
            android:layout_marginBottom="@dimen/record_item_margin_top"
            android:text="手机"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:text="07:14"
        android:textColor="@color/colorCharBGGray"
        android:textSize="10sp"/>


</RelativeLayout>

